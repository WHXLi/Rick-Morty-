<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="character_fragment_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="character_fragment_header" parent="character_fragment_text">
        <item name="android:paddingStart">@dimen/character_fragment_text_padding</item>
        <item name="android:paddingEnd">@dimen/character_fragment_text_padding</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/character_fragment_text_size</item>
        <item name="color">@color/fragment_character_header</item>
    </style>
    
    <style name="character_fragment_body" parent="character_fragment_text">
        <item name="android:paddingStart">@dimen/character_fragment_text_padding</item>
        <item name="android:paddingEnd">@dimen/character_fragment_text_padding</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/character_fragment_text_size</item>
        <item name="color">@color/fragment_character_body</item>
    </style>
</resources>